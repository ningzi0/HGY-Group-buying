/* pages/government/zhengwu/zhengwu.wxss */
page {
  background: #f3f4f5;
}

.banner {
  background: #d54941;
  height: 200rpx;
}

.banner swiper {
  height: 282rpx;
  position: relative;
  width: 95%;
  top: 30%;
  left: 50%;
  border-radius: 20rpx;
  overflow: hidden;
  transform: translate(-50%, 0);
}

.banner image {
  width: 100%;
  height: 100%;
  display: block;
}

.content {
  margin-top: 20rpx;
}

.NoticeBar {
  margin: 0 20rpx 20rpx;
  background: #fff !important;
  border-radius: 15rpx;
  display: flex;
  padding: 20rpx 40rpx 20rpx;
  align-items: center;
}

.NoticeBar .title {
  font-weight: bold;
  font-size: 34rpx;
}

.NoticeBar .title .color {
  color: #d54941;
}

.t_notice_bar {
  flex: 2;
}

.grid {
  background: #fff;
  margin: 0 20rpx;
  border-radius: 15rpx;
  overflow: hidden;
  box-shadow: 0 0 20rpx rgba(0, 0, 0, 0.03);
}

.t-notice-bar--info {
  background: #fff !important;
  padding: 0 20rpx !important;
}

.dangjian {
  margin: 20rpx;
  padding: 30rpx;
  background: #fff;
  border-radius: 15rpx;
}

.dangjian .title {
  font-size: 30rpx;
  padding-bottom: 20rpx;
  display: flex;
  align-items: center;
}

.dangjian .title .titText,
.dangjian .title navigator {
  flex: 1;
}

.dangjian .title navigator {
  color: #666;
  display: flex;
  align-items: center;
}

.dangjian .title navigator text {
  margin-left: auto;
}

.dang_content .item .img {
  flex: 1;
}

.dang_content .item .text {
  flex: 2;
}

.dang_content .item .img image {
  width: 100%;
  height: 100%;
}

.dang_wrap {
  width: 100%;
  overflow-x: scroll;
}


.dang_content .item {
  width: 100%;
  margin-bottom: 20rpx;
  border-radius: 15rpx;
}

.dang_content .item navigator {
  display: flex;
}

.dang_content .item .text {
  padding: 20rpx;
  background: #fafafa;
}

.dang_content .item:last-child {
  margin-right: 0;
}

.dang_content .item .text .tit {
  font-size: 34rpx;
  font-weight: bold;
  text-overflow: ellipsis;
  height: 50rpx;
  overflow: hidden;
  white-space: nowrap;
  width: 400rpx;
}

.dang_content .item .text .date {
  font-size: 24rpx;
  color: #999;
  padding: 15rpx 0;
}

.dang_content .item .text .text_con {
  font-size: 24rpx;
  height: 75rpx;
  overflow: hidden;
  color: #999;
  line-height: 1.7;
}

.online-contact {
  padding: 0 20rpx 20rpx;
}



.t-notice-bar__content--vertical-item {
  white-space: normal !important;
  text-overflow: initial !important;
}

.t-notice-bar__content--vertical {
  height: 87rpx !important;
}




/* 电商板块样式 */
page {
  box-sizing: border-box;
  padding-bottom: calc(env(safe-area-inset-bottom) + 96rpx);
}

.t-tabs.t-tabs--top .t-tabs__scroll {
  border-bottom: none !important;
}

.home-page-header {
  background: linear-gradient(#fff, #f5f5f5);
}

.home-page-container {
  background: #f5f5f5;
  padding-top: 20rpx;
}

.home-page-container,
.home-page-header {
  display: block;
  padding: 24rpx 24rpx 0;
}

.home-page-header .t-search__input-container {
  border-radius: 32rpx !important;
  height: 64rpx !important;
}

.home-page-header .t-search__input {
  font-size: 28rpx !important;
  color: rgb(116, 116, 116) !important;
}

.home-page-header .swiper-wrap {
  margin-top: 20rpx;
}

.home-page-header .t-image__swiper {
  width: 100%;
  height: 300rpx;
  border-radius: 10rpx;
}

.home-page-container .t-tabs {
  background: #f5f5f5 !important;
}

.home-page-container .t-tabs .t-tabs-nav {
  background-color: transparent;
  line-height: 80rpx;
  font-size: 28rpx;
  color: #333;
}

.home-page-container .t-tabs .t-tabs-scroll {
  border: none !important;
}

/* 半个字 */
.home-page-container .tab.order-nav .order-nav-item.scroll-width {
  min-width: 165rpx;
}

.home-page-container .tab .order-nav-item.active {
  color: #fa550f !important;
}

.home-page-container .tab .bottom-line {
  border-radius: 4rpx;
}

.home-page-container .tab .order-nav-item.active .bottom-line {
  background-color: #fa550f !important;
}

.home-page-container .tabs-external__item {
  /* color: #666 !important; */
  font-size: 28rpx;
}

.home-page-container .tabs-external__active {
  color: #333333 !important;
  font-size: 32rpx;
}

.home-page-container .tabs-external__track {
  /* background-color: #fa4126 !important; */
  height: 6rpx !important;
  border-radius: 4rpx !important;
  width: 48rpx !important;
}

.t-tabs.t-tabs--top .t-tabs__item,
.t-tabs.t-tabs--bottom .t-tabs__item {
  height: 86rpx !important;
}

.t-tabs__item {
  padding: 0 35rpx 0 0 !important;
}

.t-count-down__split--dot {
  margin: 0 !important;
}

.home-page-container .goods-list-container {
  background: #f5f5f5 !important;
  margin-top: 16rpx;
}

.home-page-tabs {
  --td-tab-nav-bg-color: transparent;
  --td-tab-border-color: transparent;
  --td-tab-item-color: #666;
  --td-tab-track-color: red;
}

.Sale {
  padding: 15rpx 20rpx;
  background: #fff;
  margin-bottom: 15rpx;
}

.Sale .flex {
  display: flex;
  align-items: center;
}

.Sale .flex .col {
  flex: 1;
}

.t-divider--vertical {
  height: 100% !important;
}

.Sale .h3 {
  font-weight: bold;
  margin-bottom: 8rpx;
  font-size: 34rpx;
}

.saleList {
  width: 65%;
  text-align: right;
}



.divider {
  height: 100rpx;
}

.t-grid-item__image:not(:empty).t-grid-item__image--middle {
  width: 90rpx !important;
  height: 90rpx !important;
}

.t-grid-item__image:not(:empty).t-grid-item__image--middle image {
  width: 100% !important;
  height: 100% !important;
  border-radius: 15rpx !important;
}

.t-grid-item__content {
  overflow: initial !important;
}

.t-badge__content:not(:empty)+.t-has-count {
  transform: translate(15%, -50%) !important;
}

.t-grid-item__content {
  padding: 15rpx 0 !important;
}


.indexBuycar {
  position: fixed;
  bottom: 109rpx;
  width: 100%;
  left: 0;
  background-color: #fff;
  z-index: 666;
  padding: 0 20rpx 0;
  display: flex;
  align-items: center;
}

.buycarico image {
  width: 120rpx;
  height: 120rpx;
}


.buycarico {
  width: 50%;
}

.buyCarPrice {
  padding: 0 20rpx;
  color: var(--td-button-danger-bg-color, var(--td-error-color, var(--td-error-color-6, #d54941)));
  font-size: 42rpx;
  font-weight: bold;
}

.buyCarPrice text {
  font-size: 28rpx;
}

.t-badge--circle {
  top: 15px !important;
}




.swiper {
  padding: 0 0 20rpx;
  background-color: transparent;
}

.card-theme {
  --td-swiper-radius: 0;
  --td-swiper-item-padding: 0 12rpx;
  --td-swiper-nav-dot-color: #e7e7e7;
  --td-swiper-nav-dot-active-color: #0052d9;

}

.card-theme .card-theme-nav {
  bottom: -18px;
}

.t-swiper-host {
  border-radius: 0 !important;
}